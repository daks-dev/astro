---
import { Image } from 'astro:assets';
import type { HTMLAttributes } from 'astro/types';
import twMerge from '../tailwind/tailwind-merge';

type Props = HTMLAttributes<'figure'> & {
  src: ImageMetadata;
  width?: number;
  height?: number;
  alt?: string;
  title?: string;
  subtitle?: string;
  description?: string;
  class?: ClassName;
  inner?: Record<string, ClassName>;
};

const {
  src,
  width,
  height,
  alt,
  title = '',
  subtitle = '',
  description = '',
  class: className,
  inner,
  ...props
} = Astro.props;

const caption = title || subtitle || description;
---

<figure
  class={twMerge('flex flex-col', className)}
  {...props}>
  <slot name='before' />
  <Image
    class={twMerge('bg-neutral-300', inner?.image)}
    {src}
    {width}
    {height}
    alt={(alt || caption).toLowerCase()}
    itemprop='image'
  />
  {
    (caption || Astro.slots.has('default')) && (
      <figcaption class={twMerge('flex flex-col', inner?.caption)}>
        {title && <span class={twMerge('font-semibold', inner?.title)}>{title}</span>}
        {subtitle && <span class={twMerge(inner?.subtitle)}>{subtitle}</span>}
        {description && <small class={twMerge(inner?.description)}>{description}</small>}
        <slot />
      </figcaption>
    )
  }
  <slot name='after' />
</figure>
