---
import twMerge from '../tailwind/tailwind-merge';

interface Props {
  date: Date;
  locale?: 'ru-ru' | 'en-us';
  month?: 'numeric' | '2-digit' | 'long' | 'short' | 'narrow';
  class?: ClassName;
}

const { date, locale = 'ru-ru', month = 'long', class: className = 'text-base' } = Astro.props;
---

<time
  class={twMerge(className)}
  datetime={date.toISOString()}>
  {
    date.toLocaleDateString(locale, {
      year: 'numeric',
      month,
      day: 'numeric'
    })
  }
</time>
