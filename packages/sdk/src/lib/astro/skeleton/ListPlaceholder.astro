---
import twMerge from '../../tailwind/tailwind-merge';

type Props = {
  class?: ClassName;
  animate?: string;
};
const { class: className, animate = 'animate-pulse hover:animation-paused' } = Astro.props;
---

<div
  class={twMerge(
    'space-y-4 divide-y divide-current rounded border border-current p-5 shadow',
    animate,
    className
  )}
  aria-hidden='true'
  role='status'>
  {
    Array(5).map((_val, idx) => (
      <div
        class='flex items-center justify-between pt-4 first:pt-0'
        aria-rowindex={idx}>
        <div>
          <div class='mb-2.5 h-2.5 w-24 rounded-full bg-current opacity-40' />
          <div class='h-2 w-32 rounded bg-current' />
        </div>
        <div class='h-2.5 w-12 rounded-full bg-current opacity-70' />
      </div>
    ))
  }
  <span class='sr-only'>...loading...</span>
</div>
