{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strictNullChecks": true,
    "checkJs": true,
    // "sourceMap": true,
    "lib": ["esnext", "DOM", "DOM.Iterable", "WebWorker"],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    "src/**/*.svetle"
  ],
  "exclude": ["node_modules/**", "dist/**"]
}
